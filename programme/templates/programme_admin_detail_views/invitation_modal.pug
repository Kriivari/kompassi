- load trans from i18n
- load crispy from crispy_forms_tags
.modal.fade#programme-admin-host-modal(tabindex="-1", role="dialog")
  .modal-dialog(role="document")
    form(method='POST').modal-content
      .modal-header
        h4 {% trans "Invite host" %}
      .modal-body
        .form-horizontal {% crispy invitation_form %}
      .modal-footer.clearfix
        .btn-group
          button.btn.btn-default(type='button', data-dismiss='modal') {% trans "Cancel" %}
          button.btn.btn-success(type='submit', name='action', value='invite-host')
            i.kompassi-icon-space-right.fa.fa-plus
            {% trans "Send invitation" %}
